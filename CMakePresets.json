{
  "version": 3,
  "cmakeMinimumRequired": { "major": 4, "minor": 0, "patch": 0 },

  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "description": "Shared settings for every toolchain",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "windows-msbuild-base",
      "hidden": true,
      "inherits": "common",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": { "value": "x64", "strategy": "external" },
      "toolset":     { "value": "host=x64", "strategy": "external" }
    },

    {
      "name": "vs2022-msvc",
      "displayName": "Visual Studio 2022 - MSVC",
      "inherits": "windows-msbuild-base",
      "generator": "Visual Studio 17 2022",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64"
        }
      },
            "cacheVariables": {
        "CMAKE_CXX_FLAGS_DEBUG": "/Od /Zi /Gy",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "",
        
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /GL /Ob2 /Oi /Gy /Gw /GF /arch:AVX512 /Zi",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/LTCG /OPT:REF /OPT:ICF /INCREMENTAL:NO"
      }
    },

    {
      "name": "vs2022-clangcl",
      "displayName": "Visual Studio 2022 - ClangCL",
      "inherits": "windows-msbuild-base",
      "generator": "Visual Studio 17 2022",
      "toolset": { "value": "ClangCL", "strategy": "set" },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },

    {
      "name": "ninja-clang",
      "displayName": "Ninja - ClangCL",
      "inherits": "common",
      "generator": "Ninja",
      "environment": {
        "CLANG_ROOT": "C:/Program Files/LLVM"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$env{CLANG_ROOT}/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "$env{CLANG_ROOT}/bin/clang-cl.exe",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "ninja-clang-tidy",
      "displayName": "Ninja - clang tidy",
      "inherits": "ninja-clang",
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": "ON"
      }
    }
  ],

  "buildPresets": [
    { "name": "msvc-debug",        "configurePreset": "vs2022-msvc",      "configuration": "Debug"   },
    { "name": "msvc-release",      "configurePreset": "vs2022-msvc",      "configuration": "Release" },
    { "name": "clangcl-vs-debug",  "configurePreset": "vs2022-clangcl",   "configuration": "Debug"   },
    { "name": "clangcl-vs-release","configurePreset": "vs2022-clangcl",   "configuration": "Release" },
    { "name": "clangcl-ninja",     "configurePreset": "ninja-clang",      "targets": [ "all" ]       },
    { "name": "ninja-clang-tidy",  "configurePreset": "ninja-clang-tidy", "targets": [ "all" ]       }
  ],

  "testPresets": [
    {
      "name": "tests-common",
      "hidden": true,
      "output":    { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    },
    {
      "name": "tests-msvc-debug",
      "inherits": "tests-common",
      "configurePreset": "vs2022-msvc"
    }
  ]
}
