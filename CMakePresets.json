{
  "version": 3,
  "cmakeMinimumRequired": { "major": 4, "minor": 0 },

  "configurePresets": [
    {
      "name":         "vs2022-x64",
      "displayName":  "Visual Studio 17 2022 x64",
      "generator":    "Visual Studio 17 2022",
      "architecture": "x64",
      "toolchainFile":"${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "binaryDir":    "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name":            "vs2022-x64-debug",
      "configurePreset": "vs2022-x64",
      "configuration":   "Debug"
    },
    {
      "name":            "vs2022-x64-release",
      "configurePreset": "vs2022-x64",
      "configuration":   "Release"
    },
    {
      "name":            "format",
      "configurePreset": "vs2022-x64"
    }
  ]
}
