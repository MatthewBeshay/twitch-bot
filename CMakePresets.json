{
  "version": 5,
  "cmakeMinimumRequired": { "major": 4, "minor": 0, "patch": 0 },

  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "description": "Shared settings for every toolchain",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-windows",

        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_EXTENSIONS": "OFF",

        "WARNINGS_AS_ERRORS": "ON",

        "ENABLE_SANITISERS": "ON",
        "SANITISE_ADDRESS": "ON",

        "ENABLE_CLANG_TIDY": "OFF",
        "ENABLE_CPPCHECK": "OFF",
        "ENABLE_IWYU": "OFF",

        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
      }
    },

    {
      "name": "windows-msbuild-base",
      "hidden": true,
      "inherits": "common",
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "architecture": { "value": "x64", "strategy": "set" },
      "toolset": { "value": "host=x64", "strategy": "set" }
    },

    {
      "name": "vs2022-msvc",
      "displayName": "Visual Studio 2022 - MSVC",
      "inherits": "windows-msbuild-base",
      "generator": "Visual Studio 17 2022",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "windows-msvc-x64" }
      },
      "cacheVariables": {
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELEASE": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELWITHDEBINFO": "ON"
      }
    },

    {
      "name": "vs2022-clangcl",
      "displayName": "Visual Studio 2022 - ClangCL",
      "inherits": "windows-msbuild-base",
      "generator": "Visual Studio 17 2022",
      "toolset": { "value": "ClangCL", "strategy": "set" },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "windows-clang-x64" }
      },
      "cacheVariables": {
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELEASE": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELWITHDEBINFO": "ON"
      }
    },

    {
      "name": "ninja-clang",
      "displayName": "Ninja - ClangCL (Debug)",
      "inherits": "common",
      "generator": "Ninja",
      "environment": { "CLANG_ROOT": "C:/Program Files/LLVM" },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$env{CLANG_ROOT}/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "$env{CLANG_ROOT}/bin/clang-cl.exe",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja-clang-relwithdebinfo",
      "displayName": "Ninja - ClangCL (RelWithDebInfo)",
      "inherits": "ninja-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "ninja-clang-release",
      "displayName": "Ninja - ClangCL (Release)",
      "inherits": "ninja-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "ninja-clang-tidy",
      "displayName": "Ninja - clang-tidy (Debug)",
      "inherits": "ninja-clang",
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": "ON"
      }
    }
  ],

  "buildPresets": [
    { "name": "msvc-debug",            "configurePreset": "vs2022-msvc",        "configuration": "Debug" },
    { "name": "msvc-relwithdebinfo",   "configurePreset": "vs2022-msvc",        "configuration": "RelWithDebInfo" },
    { "name": "msvc-release",          "configurePreset": "vs2022-msvc",        "configuration": "Release" },

    { "name": "clangcl-vs-debug",      "configurePreset": "vs2022-clangcl",     "configuration": "Debug" },
    { "name": "clangcl-vs-relwithdebinfo", "configurePreset": "vs2022-clangcl", "configuration": "RelWithDebInfo" },
    { "name": "clangcl-vs-release",    "configurePreset": "vs2022-clangcl",     "configuration": "Release" },

    { "name": "clangcl-ninja-debug",   "configurePreset": "ninja-clang" },
    { "name": "clangcl-ninja-relwithdebinfo", "configurePreset": "ninja-clang-relwithdebinfo" },
    { "name": "clangcl-ninja-release", "configurePreset": "ninja-clang-release" },

    { "name": "ninja-clang-tidy",      "configurePreset": "ninja-clang-tidy",   "targets": [ "all" ] }
  ],

  "testPresets": [
    {
      "name": "tests-common",
      "hidden": true,
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    },
    { "name": "tests-msvc-debug", "inherits": "tests-common", "configurePreset": "vs2022-msvc", "configuration": "Debug" },
    { "name": "tests-msvc-relwithdebinfo", "inherits": "tests-common", "configurePreset": "vs2022-msvc", "configuration": "RelWithDebInfo" },
    { "name": "tests-clangcl-ninja-debug", "inherits": "tests-common", "configurePreset": "ninja-clang" }
  ]
}
