# tb_netConfig.cmake.in
@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Dependencies required by tb_net's public link interface
find_dependency(Boost CONFIG REQUIRED COMPONENTS asio beast)
find_dependency(OpenSSL REQUIRED)
find_dependency(glaze CONFIG REQUIRED)
find_dependency(Microsoft.GSL CONFIG REQUIRED)
find_dependency(ZLIB REQUIRED)

# Brotli: prefer official, else try vcpkgâ€™s unofficial and alias
find_dependency(Brotli QUIET)
if(NOT Brotli_FOUND)
  find_dependency(unofficial-brotli)
  if(TARGET unofficial::brotli::brotlidec AND NOT TARGET Brotli::brotlidec)
    add_library(Brotli::brotlidec INTERFACE IMPORTED)
    set_property(TARGET Brotli::brotlidec PROPERTY
      INTERFACE_LINK_LIBRARIES unofficial::brotli::brotlidec)
  endif()
endif()

include("${CMAKE_CURRENT_LIST_DIR}/tb_netTargets.cmake")